// menu
*
  box-sizing: border-box

.wrap-menu
  background-color: #EAEAEA
  z-index: -1
  
nav
  background-color: #F8F8F8
  position: relative
  top: 4px
  min-height: 50px
  margin-bottom: 20px
  border-bottom: 1px solid #ccc
  display: block
  z-index: 10000

.container
  padding: 10px 15px
  margin-left: auto
  margin-right: auto
  
.navbar-header
  width: 200px
  margin-left: auto
  margin-right: auto
  text-align: center
  vertical-align: middle

.navbar-brand
  display: block
  color: #aaa
  text-decoration: none

.navbar-brand:hover
  color: #888
  
.judul
  color: black

.biru
  color: #0CF
.abu
  color :#666

ul li .title
  display: block
  font-weight: 900

